{% extends 'base.html.twig' %}

{% block title %}IngredientType index{% endblock %}

{% block main %}
    <div class="container d-flex justify-content-between">
        <div class="row"></div>
        {{ include('partials/_adminnav.html.twig') }}
        <main class="col-9 border border-light bg-white p-2">
            <h1>IngredientType index</h1>
            <a class="btn btn-primary m-4" href="{{ path('app_ingredient_type_new') }}">Create new</a>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for ingredient_type in ingredient_types %}
                    <tr>
                        <td>{{ ingredient_type.id }}</td>
                        <td>{{ ingredient_type.name }}</td>
                        <td>
                            <a class="btn btn-secondary" href="{{ path('app_ingredient_type_show', {'id': ingredient_type.id}) }}">show</a>
                            <a class="btn btn-success" href="{{ path('app_ingredient_type_edit', {'id': ingredient_type.id}) }}">edit</a>
                            {{ include('ingredient_type/_delete_form.html.twig') }}

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </main>
    </div>

{% endblock %}
