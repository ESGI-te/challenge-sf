{% extends 'base.html.twig' %}

{% block title %}RecipeMood index{% endblock %}

{% block body %}
    <h1>RecipeMood index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe_mood in recipe_moods %}
            <tr>
                <td>{{ recipe_mood.id }}</td>
                <td>{{ recipe_mood.name }}</td>
                <td>
                    <a href="{{ path('app_recipe_mood_show', {'id': recipe_mood.id}) }}">show</a>
