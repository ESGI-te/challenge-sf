{% extends 'base.html.twig' %}

{% block title %}RecipeDuration index{% endblock %}

{% block body %}
    <h1>RecipeDuration index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe_duration in recipe_durations %}
            <tr>
                <td>{{ recipe_duration.id }}</td>
                <td>{{ recipe_duration.name }}</td>
                <td>
                    <a href="{{ path('app_recipe_duration_show', {'id': recipe_duration.id}) }}">show</a>
                    <a href="{{ path('app_recipe_duration_edit', {'id': recipe_duration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recipe_duration_new') }}">Create new</a>
{% endblock %}
