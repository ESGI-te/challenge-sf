{% extends 'base.html.twig' %}

{% block title %}RecipeDifficulty index{% endblock %}

{% block main %}

    <div class="container d-flex justify-content-between">
        <div class="row"></div>
        {{ include('partials/_adminnav.html.twig') }}
        <main class="col-9 border border-light bg-white p-2">
            <h1>RecipeDifficulty index</h1>
            <a class="btn btn-primary m-4" href="{{ path('app_recipe_difficulty_new') }}">Create new</a>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th class="col-md-4">Id</th>
                    <th class="col-md-4">Name</th>
                    <th class="col-md-4">actions</th>
                </tr>
                </thead>
                <tbody>
                {% for recipe_difficulty in recipe_difficulties %}
                    <tr>
                        <td class="col-md-4">{{ recipe_difficulty.id }}</td>
                        <td class="col-md-4">{{ recipe_difficulty.name }}</td>
                        <td class="col-md-4">
                            <a class="btn btn-secondary" href="{{ path('app_recipe_difficulty_show', {'id': recipe_difficulty.id}) }}">show</a>
                            <a class="btn btn-success" href="{{ path('app_recipe_difficulty_edit', {'id': recipe_difficulty.id}) }}">edit</a>
                            {{ include('recipe_difficulty/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </main>
    </div>



{% endblock %}
